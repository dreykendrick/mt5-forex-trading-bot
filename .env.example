# MT5 Forex Trading Bot - Environment Variables Template
# Copy this file to .env and fill in your actual configuration values
# DO NOT commit the .env file to version control

# ============================================================================
# MT5 CREDENTIALS
# ============================================================================
# MetaTrader 5 account login credentials
MT5_ACCOUNT_NUMBER=
MT5_PASSWORD=
MT5_SERVER=

# Path to the MT5 terminal (optional, auto-detect if not specified)
MT5_PATH=

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
# Trading symbols and pairs
TRADING_SYMBOLS=EURUSD,GBPUSD,USDJPY

# Default lot size for trades
DEFAULT_LOT_SIZE=0.1

# Maximum trades allowed simultaneously
MAX_CONCURRENT_TRADES=5

# Risk percentage per trade (0.1 to 5)
RISK_PERCENTAGE=1.0

# Stop loss points (in pips)
STOP_LOSS_POINTS=50

# Take profit points (in pips)
TAKE_PROFIT_POINTS=100

# Trading session timezone (e.g., UTC, US/Eastern, Europe/London)
TRADING_TIMEZONE=UTC

# Enable/disable trading (true/false)
TRADING_ENABLED=false

# Strategy type (e.g., moving_average, rsi, bollinger_bands, grid)
STRATEGY_TYPE=moving_average

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=./logs/trading_bot.log

# Maximum log file size in MB
LOG_FILE_MAX_SIZE=10

# Number of log files to backup
LOG_BACKUP_COUNT=5

# Log format (simple, detailed, json)
LOG_FORMAT=detailed

# ============================================================================
# NOTIFICATIONS
# ============================================================================
# Email Notifications
EMAIL_ENABLED=false
EMAIL_SENDER=
EMAIL_PASSWORD=
EMAIL_RECIPIENT=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Telegram Notifications
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord Notifications
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=

# Slack Notifications
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=

# ============================================================================
# API KEYS & THIRD-PARTY SERVICES
# ============================================================================
# Financial Data APIs
ALPHA_VANTAGE_API_KEY=
IEX_CLOUD_API_KEY=
POLYGON_API_KEY=
FINNHUB_API_KEY=

# Database Configuration
DATABASE_URL=
DATABASE_TYPE=sqlite
DATABASE_NAME=trading_bot.db
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Cloud Services
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================
# Performance & Optimization
NUM_THREADS=4
CACHE_ENABLED=true
CACHE_TTL=300

# Market Hours Configuration
MARKET_OPEN_HOUR=01
MARKET_OPEN_MINUTE=00
MARKET_CLOSE_HOUR=23
MARKET_CLOSE_MINUTE=59

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================
# Development mode (enables additional logging and features)
DEBUG_MODE=false

# Backtest mode (for testing strategies without real trading)
BACKTEST_MODE=false

# Dry run mode (simulates trades without executing them)
DRY_RUN=true

# Data directory for backtest data
BACKTEST_DATA_PATH=./data/backtest

# ============================================================================
# SECURITY
# ============================================================================
# API rate limiting enabled
RATE_LIMITING_ENABLED=true

# JWT secret for authentication (if applicable)
JWT_SECRET=

# Encryption key for sensitive data
ENCRYPTION_KEY=

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Application name
APP_NAME=MT5 Forex Trading Bot

# Application version
APP_VERSION=1.0.0

# Environment (development, staging, production)
ENVIRONMENT=development

# Application port (if API server is used)
APP_PORT=8000

# Application host
APP_HOST=localhost
